{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES2020",
    "module": "ES2020",
    "strict": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "listEmittedFiles": true,
    "rootDir": "src",
    "outDir": "esm",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "types/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "esm",
    "coverage",
    "src/plugins",
    "node_modules",
    "**/__mocks__"
  ]
}
